{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["es2020"],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "outDir": "./dist",
    "rootDir": ".",
    "types": ["mocha", "node"]
  },
  "include": ["scripts/**/*", "tests/**/*"],
  "exclude": ["node_modules", "dist", "apps", "target"]
}
